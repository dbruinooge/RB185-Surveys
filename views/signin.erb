<h1>Sign In</h1>

<form action="/users/signin" method="post">
  <div>
    <label for="username">Username:
      <input name="username"/>
    </label>
  </div>
  <div>
    <label for="password">Password:
      <input name="password"/>
    </label>
  </div>
  <button type="submit">Sign in</button>
</form>